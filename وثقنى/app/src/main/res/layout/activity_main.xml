<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/lay1">


    <RelativeLayout
        android:id="@+id/lay2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/txthead"
            android:text="@string/Nheader"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryText"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"/>

        <LinearLayout
            android:layout_below="@+id/txthead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="7dp">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/animation_btn"
                    android:onClick="btn1_next"
                    android:text="@string/Nbtn1"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:padding="2dp"/>

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/animation_btn"
                    android:onClick="btn2_next"
                    android:text="@string/Nbtn2"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:padding="2dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="7dp"
                    >

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/animation_btn"
                        android:onClick="btn3_next"
                        android:text="@string/Nbtn3"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:padding="2dp"/>

                    <Button
                        android:id="@+id/btn4"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/animation_btn"
                        android:onClick="btn4_next"
                        android:text="@string/Nbtn4"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:padding="2dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <Button
                            android:id="@+id/btn5"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/animation_btn"
                            android:onClick="btn5_next"
                            android:text="@string/Nbtn5"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:padding="2dp"/>

                        <Button
                            android:id="@+id/btn6"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/animation_btn"
                            android:onClick="btn6_next"
                            android:text="@string/Nbtn6"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:padding="2dp"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="7dp">

                        <Button
                            android:id="@+id/btn7"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/animation_btn"
                            android:onClick="btn7_next"
                            android:text="@string/Nbtn7"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:padding="2dp"/>

                        <Button
                            android:id="@+id/btn8"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/animation_btn"
                            android:onClick="btn8_next"
                            android:text="@string/Nbtn8"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:padding="2dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="7dp">

                            <Button
                                android:id="@+id/btn9"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/animation_btn"
                                android:onClick="btn9_next"
                                android:textSize="15sp"
                                android:textStyle="italic"
                                android:text="@string/Nbtn9"
                                android:padding="2dp"/>

                            <Button
                                android:id="@+id/btn10"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:background="@drawable/animation_btn"
                                android:onClick="btn10_next"
                                android:textSize="15sp"
                                android:textStyle="italic"
                                android:text="@string/Nbtn10"
                                android:padding="2dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <Button
                                    android:id="@+id/btn11"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/animation_btn"
                                    android:onClick="btn11_next"
                                    android:text="@string/Nbtn11"
                                    android:textSize="15sp"
                                    android:textStyle="italic"
                                    android:padding="2dp"/>

                                <Button
                                    android:id="@+id/btn12"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/animation_btn"
                                    android:onClick="btn12_next"
                                    android:text="@string/Nbtn12"
                                    android:textSize="15sp"
                                    android:textStyle="italic"
                                    android:padding="2dp"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <Button
                                    android:id="@+id/btn13"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/animation_btn"
                                    android:onClick="btn13_next"
                                    android:text="@string/Nbtn13"
                                    android:textSize="15sp"
                                    android:textStyle="italic"
                                    android:padding="2dp"/>

                                <Button
                                    android:id="@+id/btn14"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/animation_btn"
                                    android:onClick="btn14_next"
                                    android:text="@string/Nbtn14"
                                    android:textSize="15sp"
                                    android:textStyle="italic"
                                    android:padding="2dp"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="7dp"
                                >

                                <Button
                                    android:id="@+id/btn15"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/animation_btn"
                                    android:onClick="btn15_next"
                                    android:text="@string/Nbtn15"
                                    android:textSize="15sp"
                                    android:textStyle="italic"
                                    android:padding="2dp"/>

                                <Button
                                    android:id="@+id/btn16"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/animation_btn"
                                    android:onClick="btn16_next"
                                    android:text="@string/Nbtn16"
                                    android:textSize="15sp"
                                    android:textStyle="italic"
                                    android:padding="2dp"/>

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:padding="7dp">

                                <Button
                                    android:id="@+id/btn17"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/animation_btn"
                                    android:onClick="btn17_next"
                                    android:text="@string/Nbtn17"
                                    android:textSize="15sp"
                                    android:textStyle="italic"
                                    android:padding="2dp"/>

                                <Button
                                    android:id="@+id/btn18"
                                    android:layout_width="match_parent"
                                    android:layout_height="90dp"
                                    android:layout_margin="10dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/animation_btn"
                                    android:onClick="btn18_next"
                                    android:text="@string/Nbtn18"
                                    android:textSize="15sp"
                                    android:textStyle="italic"
                                    android:padding="4dp"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</ScrollView>
